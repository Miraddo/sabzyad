.posts-list-container{background:var(--bg-light);min-height:100vh;padding:2rem 0}.posts-list-header{text-align:center;padding:3rem 0 4rem;background:linear-gradient(135deg,var(--bg-light) 0%,var(--bg-lighter) 100%);position:relative}.posts-list-header::before{content:'';position:absolute;top:0;left:0;right:0;bottom:0;background:url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%2310b981' fill-opacity='0.03'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E")repeat}.posts-list-header>*{position:relative;z-index:1}.posts-list-title{font-size:clamp(2.5rem,6vw,4rem);font-weight:800;color:var(--text-dark);margin-bottom:1rem;font-family:vazirmatn,sans-serif;letter-spacing:-.025em}.posts-list-subtitle{font-size:1.25rem;color:var(--text-light);font-weight:400;max-width:600px;margin:0 auto;line-height:1.6}.posts-container{max-width:900px;margin:0 auto;padding:0 1rem}.posts-list{display:flex;flex-direction:column;gap:1.25rem;margin-top:2rem}.post-article{background:var(--bg-white);border-radius:16px;border:1px solid var(--border-light);box-shadow:var(--box-shadow);transition:transform .2s ease,box-shadow .2s ease,border-color .2s ease}.post-article:hover{transform:translateY(-2px);box-shadow:var(--box-shadow-lg);border-color:rgba(16,185,129,.35)}.post-content{padding:1.5rem 1.25rem;background:var(--bg-white)}.post-categories{margin-bottom:1.5rem}.post-category{display:inline-block;background:var(--primary-color);color:#fff !important;padding:.5rem 1rem;border-radius:20px;font-size:.75rem;font-weight:600;text-transform:uppercase;letter-spacing:.5px;text-decoration:none;margin-left:.5rem;transition:all .3s ease;box-shadow:0 2px 8px rgba(16,185,129,.2)}.post-category:hover{background:var(--secondary-color);transform:translateY(-2px);box-shadow:0 4px 15px rgba(16,185,129,.4);color:#fff !important}.post-title{font-size:1.375rem;font-weight:700;color:var(--text-dark);margin-bottom:.5rem;line-height:1.3;font-family:vazirmatn,sans-serif}.post-title a{color:var(--text-dark);text-decoration:none;transition:color .3s ease}.post-title a:hover{color:var(--primary-color)}.post-meta{display:flex;align-items:center;gap:.75rem 1rem;margin-bottom:.75rem;flex-wrap:wrap}.meta-item{display:flex;align-items:center;gap:.5rem;color:var(--text-light);font-size:.875rem;font-weight:500}.meta-item svg{flex-shrink:0;opacity:.7}.meta-item a{color:var(--text-light);text-decoration:none;transition:color .3s ease}.meta-item a:hover{color:var(--primary-color)}[data-theme=dark] .posts-list .post-meta .meta-item{background:var(--bg-white);border:1px solid var(--border-color);border-radius:14px;padding:.35rem .6rem;color:var(--text-dark)}[data-theme=dark] .posts-list .post-meta .meta-item a{color:inherit}[data-theme=dark] .posts-list .post-meta .meta-item svg{color:inherit;opacity:.9}.post-excerpt{color:var(--text-medium);line-height:1.8;font-size:.975rem;margin-bottom:1rem}.post-footer{display:flex;justify-content:space-between;align-items:center;padding-top:.75rem;border-top:1px dashed var(--border-color);flex-wrap:wrap;gap:.75rem}.read-more{display:inline-flex;align-items:center;gap:.5rem;color:var(--primary-color) !important;text-decoration:none;font-weight:600;transition:all .3s ease;padding:.75rem 1.5rem;border-radius:25px;border:2px solid var(--primary-color);background:#fff;font-size:.85rem;color:#fff !important;background:linear-gradient(135deg,var(--primary-color),var(--secondary-color));border:0;padding:.6rem 1rem;border-radius:10px}.read-more:hover{background:var(--primary-color) !important;color:#fff !important;border-color:var(--primary-color);transform:translateX(5px);box-shadow:0 4px 15px rgba(16,185,129,.3)}.read-more:hover{filter:brightness(1.05)}.post-tags{display:flex;gap:.5rem;flex-wrap:wrap}.post-tag{display:inline-flex;align-items:center;line-height:1;background:var(--bg-lighter);color:var(--text-dark) !important;padding:.35rem